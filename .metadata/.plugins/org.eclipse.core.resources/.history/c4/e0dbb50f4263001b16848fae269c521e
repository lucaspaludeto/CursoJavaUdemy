package classe;

public class Data {
	int dia;
	String mes;
	int ano;
	
	Data(int) {
		dia = 01;
		mes = "Janeiro";
		ano = 1970;
		
	}
	
	Data(int diaInicial, String mesInicial, int anoInicial) {
		dia = diaInicial;
		mes = mesInicial;
		ano = anoInicial;
	}
	
	String obterDataFormadata() {
		return  String.format("%d de %s de %d", dia, mes, ano);
	}

}
